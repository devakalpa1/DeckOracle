#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run frontend tests and linting
echo "ğŸ” Running frontend checks..."
cd frontend
npm run lint
npm run test:coverage -- --run --silent

# Run backend tests and formatting
echo "ğŸ” Running backend checks..."
cd ../backend
cargo fmt -- --check
cargo clippy -- -D warnings
cargo test --quiet

echo "âœ… All checks passed!"
